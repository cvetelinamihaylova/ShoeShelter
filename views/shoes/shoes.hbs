<main>
    <div class="shoes">
        {{#each shoes}}
        <div class="shoe">
            <img src="{{imageURL}}">
            <h3>{{name}}</h3>
            <a href="/shoes/details/{{_id}}">Buy it for ${{price}}</a>
        </div>
        {{else}}
        <h1>No shoes to display. Be the first to create a new offer...</h1>
        {{/each}}
    </div>
</main>